# Force HTTPS (except for localhost)
<IfModule mod_rewrite.c>
    RewriteEngine On
    # ===== 1. Redirect /index.html to root =====
    RewriteCond %{THE_REQUEST} \s/index\.html [NC]
    RewriteRule ^index\.html$ / [R=301,L]
    # Redirect /news.html to /news
    RewriteCond %{THE_REQUEST} \s/news\.html [NC]
    RewriteRule ^news\.html$ /news [R=301,L]
    # ===== 2. Pretty URL for news.html =====
    RewriteRule ^news$ news.html [L]
    # ===== 3. Remove .html extension from all URLs =====
    RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
    RewriteRule ^ %1 [R=301,L]
    # ===== 4. Serve the .html file when the extension is omitted =====
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}\.html -f
    RewriteRule ^([^/]+)$ $1.html [L]
    # Skip HTTPS redirect for localhost
    RewriteCond %{HTTP_HOST} !^localhost [NC]
    RewriteCond %{HTTP_HOST} !^127\.0\.0\.1 [NC]
    
    # If we receive a forwarded http request from a proxy...
    RewriteCond %{HTTP:X-Forwarded-Proto} =http [OR]
    
    # ...or just a plain old http request...
    RewriteCond %{HTTPS} !=on
    
    # ...redirect to https version
    RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Redirect non-www to www (except for localhost)
    RewriteCond %{HTTP_HOST} !^localhost [NC]
    RewriteCond %{HTTP_HOST} !^127\.0\.0\.1 [NC]
    RewriteCond %{HTTP_HOST} !^www\.
    RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

</IfModule>

# Prevent directory listing
Options -Indexes

# Protect .env file
<Files ".env">
    Require all denied
</Files>

# Protect .htaccess file
<Files ".htaccess">
    Require all denied
</Files>

# Set security headers
<IfModule mod_headers.c>
    # Protect against XSS attacks
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME-sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Clickjacking protection
    Header set X-Frame-Options "SAMEORIGIN"
    
    # Content Security Policy
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://cdnjs.cloudflare.com 'unsafe-inline'; style-src 'self' https://fonts.googleapis.com https://cdnjs.cloudflare.com 'unsafe-inline'; font-src 'self' https://fonts.gstatic.com https://cdnjs.cloudflare.com; img-src 'self' data:; connect-src 'self';"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Feature Policy
    Header set Permissions-Policy "camera=(), microphone=(), geolocation=()"
</IfModule>

# PHP settings
<IfModule mod_php.c>
    # Disallow dangerous PHP functions
    php_flag allow_url_fopen off
    php_flag allow_url_include off
    
    # Hide PHP version
    php_flag expose_php off
    
    # Set secure cookie settings
    php_value session.cookie_httponly 1
    php_value session.cookie_secure 1
    php_value session.use_only_cookies 1
</IfModule>